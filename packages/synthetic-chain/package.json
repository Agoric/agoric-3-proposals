{
  "name": "@agoric/synthetic-chain",
  "version": "0.5.3",
  "description": "Utilities to build a chain and test proposals atop it",
  "bin": "dist/cli/cli.js",
  "main": "./dist/lib/index.js",
  "type": "module",
  "module": "./dist/lib/index.js",
  "exports": "./dist/lib/index.js",
  "types": "./dist/lib/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepare": "yarn build",
    "build": "tsup",
    "test": "ava"
  },
  "engines": {
    "node": "^18.19 || ^20.9"
  },
  "dependencies": {
    "@endo/zip": "^1.0.9",
    "better-sqlite3": "^11.8.1",
    "chalk": "^5.4.1",
    "cosmjs-types": "^0.9.0",
    "execa": "^9.5.2",
    "glob": "^11.0.1",
    "tmp": "0.2.3"
  },
  "devDependencies": {
    "@agoric/cosmic-proto": "0.5.0-u18.5",
    "@types/better-sqlite3": "^7.6.12",
    "@types/glob": "^8.1.0",
    "@types/node": "^18.19.50",
    "@types/tmp": "0.2.6",
    "ava": "^6.2.0",
    "ts-blank-space": "^0.5.1",
    "tsup": "^8.4.0",
    "typescript": "^5.7.3"
  },
  "ava": {
    "extensions": {
      "js": true,
      "ts": "module"
    },
    "environmentVariables": {
      "binary": "fake-agd",
      "ATOM_DENOM": "uatom",
      "CHAINID": "fakechain",
      "HOME": "/tmp/fake-home"
    },
    "nodeArguments": [
      "--import=ts-blank-space/register"
    ]
  },
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  }
}
