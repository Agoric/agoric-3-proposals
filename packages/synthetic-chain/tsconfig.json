{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "checkJs": false, // opt in
        "strict": true,
        "maxNodeModuleJsDepth": 2,
        "module": "ES2022",
        "moduleResolution": "Node",
        "noEmit": true,
        "target": "ESNext"
    },
    "include": [
        "src/**/*.js",
        "src/**/*.ts",
        "test/**/*.js",
        "test/**/*.ts",
    ]
}
